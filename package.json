{
  "name": "remix-tailwind",
  "version": "0.1.1",
  "description": "Use TailwindCSS with Remix without an extra build step!",
  "author": "itsMapleLeaf",
  "license": "MIT",
  "type": "module",
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "scripts": {
    "build": "tsup-node",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --verbose --forceExit",
    "release": "release-it",
    "prepublishOnly": "pnpm lint && pnpm test",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "npm run lint -- --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@remix-run/node": ">=1",
    "@remix-run/server-runtime": ">=1",
    "@types/node": "^16.11.9",
    "@types/tailwindcss": "^2.2.4"
  },
  "peerDependencies": {
    "postcss": ">=8",
    "tailwindcss": ">=2"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.0.0",
    "@jest/types": "^27.2.5",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.13.15",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "execa": "^6.0.0",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "release-it": "^14.11.8",
    "tailwindcss": "^3.0.0-alpha.2",
    "tsup": "^5.9.0",
    "typescript": "^4.5.2"
  },
  "tsup": {
    "target": "node16",
    "entryPoints": [
      "src/main.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "ignorePatterns": [
      "**/test/fixtures/**",
      "**/node_modules/**",
      "**/dist/**"
    ]
  }
}
