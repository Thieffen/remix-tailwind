{
  "name": "remix-tailwind",
  "version": "0.1.0",
  "description": "Use TailwindCSS with Remix without an extra build step!",
  "author": "itsMapleLeaf",
  "license": "MIT",
  "type": "module",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    }
  },
  "scripts": {
    "build": "tsup-node",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest --verbose",
    "release": "release-it",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@remix-run/node": ">=1",
    "@remix-run/server-runtime": ">=1",
    "@types/node": "^16.11.9",
    "@types/tailwindcss": "^2.2.4"
  },
  "peerDependencies": {
    "postcss": ">=8",
    "tailwindcss": ">=2"
  },
  "devDependencies": {
    "@jest/types": "^27.2.5",
    "@types/jest": "^27.0.3",
    "esbuild": "^0.13.15",
    "esbuild-jest": "^0.5.0",
    "execa": "^6.0.0",
    "jest": "^27.3.1",
    "postcss": "^8.3.11",
    "release-it": "^14.11.8",
    "tailwindcss": "^3.0.0-alpha.2",
    "tsup": "^5.9.0",
    "typescript": "^4.5.2"
  },
  "tsup": {
    "target": "node16",
    "entryPoints": [
      "src/main.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "dts": true
  }
}
